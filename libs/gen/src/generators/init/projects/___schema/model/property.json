{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Property Schema",
    "allOf": [
        {
            "oneOf": [
                {
                    "$ref": "#/definitions/STR"
                },
                {
                    "$ref": "#/definitions/NUM"
                },
                {
                    "$ref": "#/definitions/BOOL"
                },
                {
                    "$ref": "#/definitions/DATE"
                },
                {
                    "$ref": "#/definitions/OBJ"
                }
            ]
        }
    ],
    "definitions": {
        "OBJ": {
            "properties": {
                "isArray": {
                    "const": true
                },
                "type": {
                    "$ref": "./../enums/entity.json"
                },
                "icon": {
                    "$ref": "./../enums/icon.json"
                },
                "label": {
                    "type": "string"
                },
                "___lastProperty": {}
            },
            "additionalProperties": false
        },
        "STR": {
            "properties": {
                "isArray": {
                    "const": true
                },
                "type": {
                    "const": "string"
                },
                "validation": {
                    "$ref": "#/definitions/STR_VAL"
                },
                "icon": {
                    "$ref": "./../enums/icon.json"
                },
                "label": {
                    "type": "string"
                },
                "___lastProperty": {}
            },
            "additionalProperties": false
        },
        "NUM": {
            "properties": {
                "isArray": {
                    "const": true
                },
                "type": {
                    "const": "number"
                },
                "validation": {
                    "$ref": "#/definitions/NUM_VAL"
                },
                "icon": {
                    "$ref": "./../enums/icon.json"
                },
                "label": {
                    "type": "string"
                },
                "___lastProperty": {}
            },
            "additionalProperties": false
        },
        "DATE": {
            "properties": {
                "isArray": {
                    "const": true
                },
                "type": {
                    "const": "Date"
                },
                "icon": {
                    "$ref": "./../enums/icon.json"
                },
                "label": {
                    "type": "string"
                },
                "___lastProperty": {}
            },
            "additionalProperties": false
        },
        "BOOL": {
            "properties": {
                "isArray": {
                    "const": true
                },
                "type": {
                    "const": "boolean"
                },
                "icon": {
                    "$ref": "./../enums/icon.json"
                },
                "label": {
                    "type": "string"
                },
                "___lastProperty": {}
            },
            "additionalProperties": false
        },
        "STR_VAL": {
            "description": "String Validation",
            "properties": {
                "minLength": {
                    "type": "integer",
                    "minimum": 1
                },
                "maxLength": {
                    "type": "integer",
                    "minimum": 1
                },
                "enum": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    }
                },
                "format": {
                    "$ref": "./../enums/format.json"
                }
            },
            "additionalProperties": false
        },
        "NUM_VAL": {
            "description": "Number Validation",
            "properties": {
                "min": {
                    "type": "number"
                },
                "max": {
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "type",
        "icon",
        "label"
    ]
}