{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ProjectSchema",
    "properties": {
        "properties": {
            "patternProperties": {
                ".*": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/Common"
                        },
                        {
                            "oneOf": [
                                {
                                    "$ref": "#/definitions/Property"
                                },
                                {
                                    "$ref": "#/definitions/Relation"
                                }
                            ]
                        }
                    ]
                }
            },
            "propertyNames": {
                "pattern": "[a-z]{1}.*"
            }
        }
    },
    "definitions": {
        "Common": {
            "properties": {
                "icon": {
                    "default": "info",
                    "type": "string"
                },
                "label": {
                    "default": "Label",
                    "type": "string"
                },
                "inputType": {
                    "$ref": "./input-type.schema.json"
                }
            }
        },
        "Property": {
            "properties": {
                "type": {
                    "$ref": "./property-type.schema.json"
                },
                "required": {
                    "default": true,
                    "type": "boolean"
                },
                "unique": {
                    "default": true,
                    "type": "boolean"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "type": {
                                "enum": [
                                    "Text"
                                ]
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "format": {
                                "$ref": "./format.schema.json"
                            }
                        }
                    }
                }
            ]
        },
        "Relation": {
            "properties": {
                "target": {
                    "default": "Category",
                    "type": "string",
                    "pattern": "^[A-Z]{1,}.*"
                },
                "type": {
                    "default": "One",
                    "enum": [
                        "One",
                        "Many",
                        "Owner"
                    ]
                }
            },
            "required": [
                "target",
                "type"
            ]
        }
    }
}