{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Entity Schema",
    "$id": "EntitySchema",
    "properties": {
        "extends": {
            "$ref": "./entity-names.schema.json"
        },
        "properties": {
            "patternProperties": {
                "[a-zA-Z-]{2,}": {
                    "$ref": "./property.schema.json"
                }
            },
            "propertyNames": {
                "$ref": "./property-names.schema.json"
            }
        },
        "relations": {
            "patternProperties": {
                "[a-zA-Z-]{2,}": {
                    "$ref": "./relation.schema.json"
                }
            },
            "propertyNames": {
                "$ref": "./property-names.schema.json"
            }
        },
        "readDto": {
            "patternProperties": {
                "[a-zA-Z-]{2,}": {
                    "properties": {
                        "viewAs": {
                            "type": "string"
                        },
                        "from": {
                            "$ref": "./entity-names.schema.json"
                        }
                    }
                }
            }
        },
        "createDto": {
            "type": "array",
            "items": {
                "$ref": "./property-names.schema.json"
            },
            "uniqueItems": true
        },
        "updateDto": {
            "type": "array",
            "items": {
                "$ref": "./property-names.schema.json"
            },
            "uniqueItems": true
        },
        "required": {
            "type": "array",
            "items": {
                "$ref": "./property-names.schema.json"
            }
        },
        "unique": {
            "type": "array",
            "items": {
                "$ref": "./property-names.schema.json"
            }
        }
    }
}