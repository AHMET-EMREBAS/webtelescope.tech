import { ViewColumn, ViewEntity } from 'typeorm';
import { <%- className %> } from './entity';

@ViewEntity({
  expression(ds) {
    return ds
      .createQueryBuilder()
      .select()
      .addSelect('main.id', 'id')
      .addSelect('main.name', 'name')
      .from(<%- className %>, 'main');
  },
})
export class <%- className %>View {
  @ViewColumn() id!: number;
  @ViewColumn() name!: string;
}
