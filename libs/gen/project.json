{
  "name": "gen",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/gen/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/gen",
        "main": "libs/gen/src/index.ts",
        "tsConfig": "libs/gen/tsconfig.lib.json",
        "assets": [
          "libs/gen/*.md",
          {
            "input": "./libs/gen/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./libs/gen/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./libs/gen",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./libs/gen",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs gen {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/gen/**/*.ts", "libs/gen/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/gen/jest.config.ts"
      }
    }
  },
  "tags": []
}
