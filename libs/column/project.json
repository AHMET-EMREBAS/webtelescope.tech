{
  "name": "column",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/column/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/column",
        "main": "libs/column/src/index.ts",
        "tsConfig": "libs/column/tsconfig.lib.json",
        "assets": ["libs/column/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs column {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/column/**/*.ts", "libs/column/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/column/jest.config.ts"
      }
    }
  },
  "tags": []
}
