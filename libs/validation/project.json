{
  "name": "validation",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/validation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/validation",
        "main": "libs/validation/src/index.ts",
        "tsConfig": "libs/validation/tsconfig.lib.json",
        "assets": ["libs/validation/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs validation {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/validation/**/*.ts",
          "libs/validation/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/validation/jest.config.ts"
      }
    }
  },
  "tags": []
}
