{
  "name": "email",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/email/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/email",
        "main": "libs/email/src/index.ts",
        "tsConfig": "libs/email/tsconfig.lib.json",
        "assets": ["libs/email/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs email {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/email/**/*.ts", "libs/email/package.json"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/email/jest.config.ts"
      }
    }
  },
  "tags": []
}
