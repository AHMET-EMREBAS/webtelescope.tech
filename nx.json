{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/eslint.config.js"
      ]
    },
    "e2e": {
      "cache": true,
      "inputs": ["default", "^production"]
    },
    "@nx/jest:jest": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "build-storybook": {
      "cache": true,
      "inputs": [
        "default",
        "^production",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ]
    },
    "server": {
      "cache": true
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^production"]
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/test-setup.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/tsconfig.storybook.json"
    ],
    "sharedGlobals": []
  },
  "generators": {
    "@nx/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress",
      "standalone": true,
      "backendProject": "api",
      "inlineTemplate": true,
      "minimal": true,
      "prefix": "wt",
      "routing": true,
      "ssr": false,
      "bundler": "webpack",
      "projectNameAndRootFormat": "derived"
    },
    "@nx/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest",
      "prefix": "wt",
      "strict": true,
      "publishable": true,
      "projectNameAndRootFormat": "derived"
    },
    "@nx/angular:component": {
      "style": "scss",
      "nameAndDirectoryFormat": "derived",
      "prefix": "wt",
      "standalone": true
    },
    "@nx/angular:directive": {
      "nameAndDirectoryFormat": "derived",
      "prefix": "wt",
      "standalone": true
    },
    "@nx/nest:application": {
      "strict": true,
      "projectNameAndRootFormat": "derived"
    },
    "@nx/js:library": {
      "strict": true,
      "publishable": true,
      "projectNameAndRootFormat": "derived",
      "unitTestRunner": "jest",
      "bundler": "swc"
    },
    "@x/plugin:plugin": {
      "strict": true,
      "publishable": true,
      "projectNameAndRootFormat": "derived",
      "unitTestRunner": "jest",
      "bundler": "swc"
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": ["build-storybook", "server"]
      }
    }
  },
  "defaultProject": "material"
}
