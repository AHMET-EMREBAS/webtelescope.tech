{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "String Property",
    "$id": "StringProperty",
    "properties": {
        "type": {
            "const": "string"
        },
        "minLength": {
            "type": "number",
            "minimum": 0
        },
        "maxLength": {
            "type": "number",
            "minimum": 0
        },
        "format": {
            "$ref": "../names/string-format.schema.json"
        },
        "inputType": {
            "enum": [
                "text",
                "textarea",
                "editor"
            ]
        }
    },
    "required": [
        "type",
        "inputType"
    ]
}