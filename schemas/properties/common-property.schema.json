{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Common Property",
    "$id": "CommonProperty",
    "properties": {
        "name": {
            "$ref": "../names/property-names.schema.json"
        },
        "icon": {
            "$ref": "../names/icon-names.schema.json"
        },
        "description": {
            "type": "string"
        },
        "enum": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "oneOf": [
                    {
                        "type": "string"
                    },
                    {
                        "type": "number"
                    }
                ]
            }
        }
    },
    "required": [
        "name",
        "icon"
    ]
}